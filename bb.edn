{:tasks
 {default {:doc "List available commands"
           :task (println "ğŸ” Available tasks:")}

  build {:doc "Build the TiddlyWiki"
         :task (do
                 (println "ğŸ”¨ Building TiddlyWiki...")
                 (shell {:dir (System/getProperty "user.home")}
                        "tiddlywiki notes --build index")
                 (println "âœ… TiddlyWiki built successfully!"))}

  dev {:doc "Start development server on port 8080"
       :requires ([babashka.process :refer [shell process]])
       :task (do
               (println "ğŸ“‹ Starting TiddlyWiki development server...")

               ;; Check if port is in use and kill processes if needed
               (let [port-check (process {:out :string} "lsof -ti:8080")]
                 (let [result (deref port-check)]
                   (when (zero? (:exit result))
                     (println "ğŸ”´ Port 8080 is in use. Killing processes...")
                     ;; Use a separate shell command to kill processes
                     (shell "pkill -f \"tiddlywiki.*--listen\"")
                     (println "âœ… Processes using port 8080 have been terminated.")
                     (Thread/sleep 1000))))

               ;; Start server and open browser
               (let [home-dir (System/getProperty "user.home")
                     server-process (process {:dir home-dir}
                                             "tiddlywiki notes --listen")]
                 (println "ğŸš€ TiddlyWiki server starting...")
                 (Thread/sleep 2000)
                 (println "ğŸŒ Opening browser at http://127.0.0.1:8080")
                 (shell "open http://127.0.0.1:8080")
                 (println "ğŸ’» Server running. Press Ctrl+C to stop.")
                 (deref server-process)))}

  upload {:doc "Build and upload changes"
          :depends [build]
          :task (do
                  (println "ğŸ“¦ Uploading changes to repository...")
                  (shell "git add .")
                  (println "ğŸ’¾ Committing changes...")
                  (shell "git commit -m \"update notes\"")
                  (println "ğŸš€ Pushing to remote repository...")
                  (shell "git push")
                  (println "âœ… Upload complete!"))}}}